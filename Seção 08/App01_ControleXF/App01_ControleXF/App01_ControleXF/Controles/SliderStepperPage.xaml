<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App01_ControleXF.Controles.SliderStepperPage">
    <ContentPage.Content>
        <StackLayout>
            <Slider 
                Minimum="0"
                Maximum="100"
                Value="10"
                
                ValueChanged="TrocouValorSlider"
                
                >
                

            </Slider>
            <Label x:Name="LabelSlider"/>
            <Stepper Maximum="10"
                     Minimum="0"
                     Increment="1"
                     
                     ValueChanged="TrocouValorStepper"
                     >
                
            </Stepper>
            <Label x:Name="LabelStepper"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>