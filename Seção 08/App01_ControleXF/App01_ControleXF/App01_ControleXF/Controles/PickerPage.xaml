<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App01_ControleXF.Controles.PickerPage">
    <ContentPage.Content>
        <StackLayout>
            <Picker 
                Title="Selecione o Seu preferido" 
                TextColor="ForestGreen"
                SelectedIndexChanged="IntemSelecionado"
                >
                <Picker.Items>
                    <x:String>Microsoft</x:String>
                    <x:String>Tesla</x:String>
                    <x:String>Oracle</x:String>
                    <x:String>MongoDB</x:String>
                    <x:String>Linux</x:String>
                </Picker.Items>
                              
            </Picker>
            <Label x:Name="lbl_Resultado"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>