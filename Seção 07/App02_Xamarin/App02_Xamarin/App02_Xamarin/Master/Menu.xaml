<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Pag="clr-namespace:App02_Xamarin.Pages"
             x:Class="App02_Xamarin.Master.Menu">
    <MasterDetailPage.Master>
        <!--  Menu  -->
        <ContentPage Title="Menu" BackgroundColor="#0D1F2D">
            <StackLayout >
                <StackLayout BackgroundColor="#FFC926" Padding="30">
                    <Image Source="Logo.png" HorizontalOptions="Center" VerticalOptions="Center" />
                </StackLayout>
                <StackLayout Spacing="10" >
                    <Button Text="Miguel de Icaza" TextColor="White" BackgroundColor="Transparent" Clicked="GoPaginaPefil1"/>
                    <Button Text="Joseph Hill" TextColor="White" BackgroundColor="Transparent"/>
                    <Button Text="Nat Friedman" TextColor="White" BackgroundColor="Transparent"/>
                    <Button Text="Sobre a Xamarin" TextColor="White" BackgroundColor="Transparent" Clicked="GoPaginaXamarin"/>
                </StackLayout>
            </StackLayout>
        </ContentPage>
            
    </MasterDetailPage.Master>
    
    <MasterDetailPage.Detail>
        <!--  Paginas  -->
        <NavigationPage>
            <x:Arguments>
                 <Pag:Perfil1/>
            </x:Arguments>
        </NavigationPage>
    </MasterDetailPage.Detail>
    
</MasterDetailPage>