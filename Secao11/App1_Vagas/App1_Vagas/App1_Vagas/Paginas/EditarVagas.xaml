<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1_Vagas.Paginas.EditarVagas">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Entry x:Name="NomeDaVaga" Placeholder="Vaga"/>
                <Entry x:Name="NomeEmpresa" Placeholder="Empresa"/>
                <Entry x:Name="QuantidadeVagas" Placeholder="Quantidade"/>
                <Entry x:Name="NomeCidade" Placeholder="Cidade"/>
                <Entry x:Name="ValorSalario" Placeholder="Salário"/>
                <Label x:Name="NomeCargo" Text="Descrição do Cargo"/>
                <Editor x:Name="EditorMSG" HeightRequest="200"/>

                <StackLayout Orientation="Horizontal">
                    <Label Text="Tipo de Contratação"/>
                    <Label Text="CLT"/>
                    <Switch x:Name="TipoContratacao"/>
                    <Label Text="PJ"/>
                </StackLayout>
                <Entry x:Name="NumeroTelefone" Placeholder="Telefone"/>
                <Entry x:Name="EndEmail" Placeholder="Email"/>

                <Button Text="Salvar Cadastro" Clicked="SalvarAction"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>